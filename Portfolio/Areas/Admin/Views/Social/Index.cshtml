@model List<Social>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-primary py-2">Socials List</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Social" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Social
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Social Name</th>
                    <th class="text-center">Icon</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var social in Model)
                {
                    <tr>
                        <td class="text-center">@social.Name</td>
                        <td class="text-center"><i class="@social.Icon"></i></td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Social" asp-action="Upsert" asp-route-id="@social.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-pencil-square" title="Edit"></i>
                                </a>
                                <a class="btn btn-primary mx-2" onclick="confirmDelete(@social.Id)">

                                    <i class="bi bi-trash-fill" title="Delete"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/social.js"></script>
}

