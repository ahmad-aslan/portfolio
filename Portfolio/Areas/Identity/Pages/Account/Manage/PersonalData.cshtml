@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card shadow border-0 mb-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="py-2">@ViewData["Title"]</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="text-dark">
                    <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                    <p>
                        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                    </p>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post">
                            <button class="btn btn-secondary form-control mb-2" type="submit">Download</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary form-control">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
