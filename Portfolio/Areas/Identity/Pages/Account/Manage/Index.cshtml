@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="card shadow border-0 mb-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="py-2">@ViewData["Title"]</h3>
            </div>
        </div>
    </div>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control border-0 shadow" placeholder="Please choose your username." disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control border-0 shadow" placeholder="Please enter your phone number." />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="Input.Name" class="form-label"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.JobTitle" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="Input.JobTitle" class="form-label"></label>
                        <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Description" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="Input.Description" class="form-label"></label>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.BirthDate" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="Input.BirthDate" class="form-label"></label>
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Address" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="Input.Address" class="form-label"></label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input type="file" name="ProfileFile" class="form-control border-0 shadow" />
                                <label asp-for="Input.ProfileImage" class="form-label text-muted"></label>
                            </div>
                            <div class="p-1 text-center shadow">
                                <img src="~/@Model.Input.ProfileImage" alt="Profile Image"
                                     style="border-radius:5px; border:1px solid #bbb9b9; width:100%; height:250px;" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                <input type="file" name="aboutFile" class="form-control border-0 shadow" />
                                <label asp-for="Input.AboutImage" class="form-label text-muted"></label>
                            </div>
                            <div class="p-1 text-center shadow">
                                <img src="~/@Model.Input.AboutImage" alt="About Image"
                                     style="border-radius:5px; border:1px solid #bbb9b9; width:100%; height:250px;" />
                            </div>
                        </div>
                    </div>                                     
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </form>
            </div>       
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
